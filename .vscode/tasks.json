{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run python",
            "type": "shell",
            "command": "python3 ${file}"
        },
        {
            "label": "run c++",
            "type": "shell",
            "command": "cd ${fileDirname} && make build/${fileBasenameNoExtension} && ./build/${fileBasenameNoExtension}",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "g++ -g --std=c++11 ${file} -o ${fileDirname}/build/${fileBasenameNoExtension}",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}